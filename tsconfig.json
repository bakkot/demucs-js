{
  "include": ["src/**/*", "web/**/*"],
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "lib": ["es2022", "dom", "dom.iterable"]
  }
}
